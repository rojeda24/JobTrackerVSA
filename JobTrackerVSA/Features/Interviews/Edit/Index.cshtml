@page "{id:guid}"
@using JobTrackerVSA.Web.Domain
@model JobTrackerVSA.Web.Features.Interviews.Edit.IndexModel
@{
    ViewData["Title"] = "Edit Interview";
}

<div class="mb-4">
    <h1><i class="bi bi-pencil-square me-2"></i>Edit Interview</h1>
</div>


<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Form.Id" />
                    <input type="hidden" asp-for="Form.JobApplicationId" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Form.ScheduledAt" class="form-label fw-bold">Date & Time</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-clock"></i></span>
                                <input asp-for="Form.ScheduledAt" class="form-control" type="datetime-local" />
                            </div>
                            <span asp-validation-for="Form.ScheduledAt" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Form.Type" class="form-label fw-bold">Interview Type</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag"></i></span>
                                <select asp-for="Form.Type" class="form-select"
                                        asp-items="Html.GetEnumSelectList<Interview.InterviewType>()">
                                </select>
                            </div>
                            <span asp-validation-for="Form.Type" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Form.Notes" class="form-label fw-bold">Notes & Preparation</label>
                            <textarea asp-for="Form.Notes" class="form-control" rows="5"
                                        placeholder="e.g. Prepare system design questions, review resume..."></textarea>
                            <span asp-validation-for="Form.Notes" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="/JobApplications/Edit/Edit" asp-route-id="@Model.Form.JobApplicationId"
                            class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>

                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-floppy"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}