@page "/job-applications/{jobId:guid}/interviews/add"
@using JobTrackerVSA.Web.Domain
@model JobTrackerVSA.Web.Features.Interviews.Add.IndexModel
@{
    ViewData["Title"] = "Schedule Interview";
}

<div class="mb-4">
    <h1><i class="bi bi-calendar-plus me-2"></i>Schedule Interview</h1>
    @if (Model.JobHeader != null)
    {
        <h5 class="text-muted ms-1">
            for <span class="fw-bold text-dark">@Model.JobHeader.Position</span> at @Model.JobHeader.CompanyName
        </h5>
    }
</div>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Form.JobApplicationId" />

                    <partial name="/Features/Interviews/Shared/_InterviewForm.cshtml" For="Form" />

                    <div class="mt-4 d-flex justify-content-between">
                        <a asp-page="/JobApplications/Edit/Edit" asp-route-id="@Model.Form.JobApplicationId"
                           class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>

                        <button type="submit" class="btn btn-primary px-4">
                            <i class="bi bi-plus-lg"></i> Schedule Interview
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            syncUtcAndLocalTime('ScheduledAtHidden', 'ScheduledAtVisual');
        });
    </script>
}
