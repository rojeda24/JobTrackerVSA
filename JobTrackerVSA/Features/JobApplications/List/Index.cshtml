@page "/"
@model JobTrackerVSA.Web.Features.JobApplications.List.IndexModel
@{
    ViewData["Title"] = "My Job Applications";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a href="/Register" class="btn btn-primary">
        <i class="bi bi-plus-lg"></i> Add New
    </a>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Date</th>
                <th>Company</th>
                <th>Position</th>
                <th>Status</th>
                <th>Notes</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var app in Model.Applications)
            {
                <tr>
                    <td>@app.AppliedAt.ToShortDateString()</td>
                    <td class="fw-bold">@app.CompanyName</td>
                    <td>@app.Position</td>
                    <td>
                        <span class="badge @(app.Status == JobTrackerVSA.Web.Domain.JobApplication.ApplicationStatus.Rejected ? "bg-danger" : "bg-success")">
                            @app.StatusDisplay
                        </span>
                    </td>
                    <td title="@app.Notes">
                        <small class="text-muted">@app.NotesPreview</small>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(app.JobDescriptionUrl))
                        {
                            <a href="@app.FinalJobUrl" target="_blank" class="btn btn-sm btn-outline-info">
                                <i class="bi bi-box-arrow-up-right">🔗</i>
                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>