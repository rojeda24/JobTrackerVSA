@page "/Add"
@model JobTrackerVSA.Web.Features.JobApplications.Add.AddModel
@{
    ViewData["Title"] = "Add Job Application";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title mb-0">New Application</h3>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Command.CompanyName" class="form-label">Company Name</label>
                            <input asp-for="Command.CompanyName" class="form-control" placeholder="e.g. Google, Microsoft..." />
                            <span asp-validation-for="Command.CompanyName" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Command.Position" class="form-label">Position / Job Title</label>
                            <input asp-for="Command.Position" class="form-control" placeholder="e.g. Senior .NET Developer" />
                            <span asp-validation-for="Command.Position" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.JobDescriptionUrl" class="form-label">Job Description URL</label>
                        <input asp-for="Command.JobDescriptionUrl" type="text" class="form-control" placeholder="https://linkedin.com/jobs/..." />
                        <span asp-validation-for="Command.JobDescriptionUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.AppliedAt" class="form-label">Date Applied</label>
                        <input asp-for="Command.AppliedAt" type="date" class="form-control" 
                               value="@Model.Command.AppliedAt?.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="Command.AppliedAt" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Command.Notes" class="form-label">Additional Notes</label>
                        <textarea asp-for="Command.Notes" class="form-control" rows="3" placeholder="Salary range, tech stack, referral name..."></textarea>
                        <span asp-validation-for="Command.Notes" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                        <a href="/" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Save Application</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}